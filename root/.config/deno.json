{
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "node_modules"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 180,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
