#!/bin/bash

if [[ ! -e "$MEMO_DIR" ]]; then
  echo '$MEMO_DIR set at .zshrc-ex'
  exit 1
fi


daily_note(){
    local DIR="$MEMO_DIR/daily"
    local DATE=$(date "+%Y-%m-%d")
    local HHMMSS=$(date "+%H-%M-%S")
    filename="${DIR}/$DATE.md"
}

memo_note(){
    local DIR="$MEMO_DIR/"
    filename="${DIR}/memo.md"
}

memo_note

touch $filename
open -a "/Applications/CotEditor.app" $filename
