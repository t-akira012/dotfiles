{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "Write(*.sh)",
      "Write(*.py)",
      "Write(*.md)",
      "Read(*)",
      "Bash(make :*)",
      "Bash(python manage.py :*)"
    ],
    "deny": [
      "Bash(rm :*)",
      "Bash(curl :*)",
      "Write(/etc/*)",
      "Write(~/.ssh/*)"
    ]
  },
  "ignorePatterns": [
    "node_modules/**",
    ".venv/**",
    "*.pyc",
    "__pycache__/**"
  ],
  "autoAccept": {
    "readFile": true,
    "writeFile": true,
    "executeCommand": false
  }
}
